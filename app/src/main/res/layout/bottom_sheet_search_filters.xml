<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_search_bg"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="14dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_filter_title"
        android:textColor="@color/home_text_primary"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/search_filter_category"
        android:textColor="@color/home_text_primary"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupFilterCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCategoryAll"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_filter_all"
            app:chipBackgroundColor="@color/home_chip_bg" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCategoryCraft"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_category_craft" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCategoryFood"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_category_food" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCategoryFashion"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_category_fashion" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/search_filter_price"
        android:textColor="@color/home_text_primary"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/sliderPriceRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:valueFrom="0"
        android:valueTo="400" />

    <TextView
        android:id="@+id/tvPriceRangeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_text_secondary"
        android:textSize="13sp"
        android:fontFamily="@font/poppins_regular" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/search_filter_location"
        android:textColor="@color/home_text_primary"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLocationAny"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_filter_all"
            app:chipBackgroundColor="@color/home_chip_bg" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLocationMedina"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medina" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLocationDjerba"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Djerba" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLocationKairouan"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kairouan" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchBioNaturel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/search_filter_bio_naturel"
        android:textColor="@color/home_text_primary"
        android:fontFamily="@font/poppins_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilterReset"
            style="@style/AppButton.Secondary"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/search_filter_reset" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilterApply"
            style="@style/AppButton.Primary"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/search_filter_apply" />
    </LinearLayout>
</LinearLayout>
