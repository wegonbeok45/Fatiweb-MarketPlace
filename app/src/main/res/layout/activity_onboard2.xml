<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutOnboardSlideTwoRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingStart="@dimen/screen_padding_horizontal"
    android:paddingEnd="@dimen/screen_padding_horizontal"
    tools:context=".Onboard2">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:layout_marginTop="@dimen/space_16"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        app:tint="@color/colorOnSurface" />

    <TextView
        android:id="@+id/tvSkip"
        style="@style/AppText.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_text_081"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/space_32"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingTop="@dimen/space_32"
        android:paddingBottom="@dimen/space_16"
        app:layout_constraintBottom_toTopOf="@id/layoutPagerIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeadline"
                style="@style/AppText.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/auto_text_085"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSubtitle"
                style="@style/AppText.Body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:gravity="center"
                android:text="@string/auto_text_086"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeadline" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCategoryFood"
                style="@style/AppCard"
                android:layout_width="0dp"
                android:layout_height="@dimen/category_card_height"
                android:layout_marginTop="@dimen/space_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivCategoryFoodBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@drawable/categorie1"
                        tools:src="@drawable/categorie1" />

                    <View
                        android:id="@+id/viewCategoryFoodOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorScrim" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutCategoryFoodText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/space_24">

                        <TextView
                            android:id="@+id/tvCategoryFoodIcon"
                            style="@style/AppText.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textColor="@color/colorSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCategoryFoodTitle"
                            style="@style/AppText.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_text_088"
                            android:textColor="@color/colorSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCategoryFoodSubtitle"
                            style="@style/AppText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_2"
                            android:text="@string/auto_text_089"
                            android:textColor="@color/colorOnScrim"
                            app:layout_constraintStart_toStartOf="@id/tvCategoryFoodTitle"
                            app:layout_constraintTop_toBottomOf="@id/tvCategoryFoodTitle" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCategoryCosmetics"
                style="@style/AppCard"
                android:layout_width="0dp"
                android:layout_height="@dimen/category_card_height"
                android:layout_marginTop="@dimen/space_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardCategoryFood">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivCategoryCosmeticsBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@drawable/categorie2"
                        tools:src="@drawable/categorie2" />

                    <View
                        android:id="@+id/viewCategoryCosmeticsOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorScrim" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutCategoryCosmeticsText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/space_24">

                        <TextView
                            android:id="@+id/tvCategoryCosmeticsIcon"
                            style="@style/AppText.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textColor="@color/colorSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCategoryCosmeticsTitle"
                            style="@style/AppText.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_text_090"
                            android:textColor="@color/colorSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCategoryCosmeticsSubtitle"
                            style="@style/AppText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_2"
                            android:text="@string/auto_text_091"
                            android:textColor="@color/colorOnScrim"
                            app:layout_constraintStart_toStartOf="@id/tvCategoryCosmeticsTitle"
                            app:layout_constraintTop_toBottomOf="@id/tvCategoryCosmeticsTitle" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCategoryCrafts"
                style="@style/AppCard"
                android:layout_width="0dp"
                android:layout_height="@dimen/category_card_height"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardCategoryCosmetics">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivCategoryCraftsBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@drawable/categorie3"
                        tools:src="@drawable/categorie3" />

                    <View
                        android:id="@+id/viewCategoryCraftsOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorScrim" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutCategoryCraftsText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/space_24">

                        <TextView
                            android:id="@+id/tvCategoryCraftsIcon"
                            style="@style/AppText.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textColor="@color/colorSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCategoryCraftsTitle"
                            style="@style/AppText.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_text_013"
                            android:textColor="@color/colorSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCategoryCraftsSubtitle"
                            style="@style/AppText.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_2"
                            android:text="@string/auto_text_092"
                            android:textColor="@color/colorOnScrim"
                            app:layout_constraintStart_toStartOf="@id/tvCategoryCraftsTitle"
                            app:layout_constraintTop_toBottomOf="@id/tvCategoryCraftsTitle" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layoutPagerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btnContinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            style="@style/AppIndicator.Inactive"
            android:layout_width="@dimen/onboarding_indicator_dot_width"
            android:layout_height="@dimen/onboarding_indicator_height" />

        <com.google.android.material.card.MaterialCardView
            style="@style/AppIndicator.Active"
            android:layout_width="@dimen/onboarding_indicator_active_width"
            android:layout_height="@dimen/onboarding_indicator_height"
            android:layout_marginStart="@dimen/space_16" />

        <com.google.android.material.card.MaterialCardView
            style="@style/AppIndicator.Inactive"
            android:layout_width="@dimen/onboarding_indicator_dot_width"
            android:layout_height="@dimen/onboarding_indicator_height"
            android:layout_marginStart="@dimen/space_16" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/AppButton.Primary"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/space_32"
        android:text="@string/auto_text_084"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

