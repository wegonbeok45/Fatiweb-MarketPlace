<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/profile_card_bg"
    app:cardCornerRadius="@dimen/profile_menu_card_radius"
    app:cardElevation="1dp"
    app:strokeColor="@color/colorBorderLight"
    app:strokeWidth="@dimen/stroke_width_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/location"
            app:tint="@color/home_text_secondary" />

        <TextView
            android:id="@+id/tvAddressLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:textColor="@color/home_text_primary"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular" />

        <TextView
            android:id="@+id/tvAddressState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/home_text_secondary"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium" />

        <ImageView
            android:id="@+id/ivAddressRemove"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_profile_logout"
            app:tint="@color/profile_logout_text" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
