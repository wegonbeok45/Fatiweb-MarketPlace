<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_screen_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTopSearchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSearchBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/details_back"
            app:layout_constraintBottom_toBottomOf="@id/cardSearchInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardSearchInput"
            app:srcCompat="@drawable/back"
            app:tint="@color/home_text_primary" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSearchInput"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_search_input"
            app:cardBackgroundColor="@color/home_search_bg"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toStartOf="@id/ivSearchFilter"
            app:layout_constraintStart_toEndOf="@id/ivSearchBack"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/colorBorderLight"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_profile_nav_search"
                    app:tint="@color/home_text_secondary" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/search_hint_products"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/home_text_primary"
                    android:textColorHint="@color/home_text_secondary"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/ivSearchFilter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/auto_text_006"
            app:layout_constraintBottom_toBottomOf="@id/cardSearchInput"
            app:layout_constraintEnd_toStartOf="@id/tvSearchCancel"
            app:layout_constraintTop_toTopOf="@id/cardSearchInput"
            app:srcCompat="@drawable/ic_home_filter"
            app:tint="@color/home_text_primary" />

        <TextView
            android:id="@+id/tvSearchCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:text="@string/search_cancel"
            android:textColor="@color/home_text_secondary"
            android:textSize="14sp"
            android:visibility="gone"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintBottom_toBottomOf="@id/cardSearchInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardSearchInput" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/layoutStateHost"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTopSearchBar">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutDefaultState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_recent_title"
                    android:textColor="@color/home_text_primary"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold" />

                <LinearLayout
                    android:id="@+id/layoutRecentList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/search_popular_title"
                    android:textColor="@color/home_text_primary"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:singleLine="false"
                    app:singleSelection="false" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutSuggestionsState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_suggestions_title"
                    android:textColor="@color/home_text_primary"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold" />

                <LinearLayout
                    android:id="@+id/layoutSuggestionsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layoutResultsState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvResultsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/home_text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="@color/home_search_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <AutoCompleteTextView
                        android:id="@+id/dropdownSort"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:dropDownVerticalOffset="8dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/home_text_primary"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSkeleton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/bg_search_skeleton" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_search_skeleton" />
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollResults"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="22dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="20dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/placeholder" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/search_empty_title"
                            android:textColor="@color/home_text_primary"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:text="@string/search_empty_subtitle"
                            android:textColor="@color/home_text_secondary"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_regular" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBrowseCategories"
                            style="@style/AppButton.Primary"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginTop="14dp"
                            android:text="@string/search_browse_categories" />
                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/gridSearchResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:orientation="horizontal"
                        android:rowCount="1" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
