<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorSurface"
    app:cardCornerRadius="@dimen/home_product_image_radius"
    app:cardElevation="@dimen/panier_product_card_elevation"
    app:strokeWidth="@dimen/space_0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_12">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/home_product_surface"
                app:cardCornerRadius="@dimen/home_product_image_radius"
                app:cardElevation="@dimen/space_0"
                app:strokeWidth="@dimen/space_0">

                <ImageView
                    android:id="@+id/ivFavoriteProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>

            <FrameLayout
                android:id="@+id/btnFavoriteToggle"
                android:layout_width="@dimen/home_product_heart_size"
                android:layout_height="@dimen/home_product_heart_size"
                android:layout_gravity="top|end"
                android:layout_marginTop="@dimen/home_product_heart_margin"
                android:layout_marginEnd="@dimen/home_product_heart_margin"
                android:background="@drawable/bg_home_product_heart">

                <ImageView
                    android:id="@+id/ivFavoriteToggleIcon"
                    android:layout_width="@dimen/home_product_heart_icon_size"
                    android:layout_height="@dimen/home_product_heart_icon_size"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_home_heart"
                    app:tint="@color/home_heart_active" />
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvFavoriteTag"
            style="@style/AppText.Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12"
            android:textColor="@color/home_chip_bg" />

        <TextView
            android:id="@+id/tvFavoriteTitle"
            style="@style/HomeText.ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4" />

        <TextView
            android:id="@+id/tvFavoritePrice"
            style="@style/HomeText.ProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFavoriteAddCart"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/space_12"
            android:text="@string/details_add_to_cart"
            android:textAllCaps="false"
            android:textColor="@color/colorOnPrimary"
            android:textSize="13sp"
            app:backgroundTint="@color/home_chip_bg"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_home_add_cart"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="14dp"
            app:iconTint="@color/colorOnPrimary"
            app:strokeWidth="0dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

