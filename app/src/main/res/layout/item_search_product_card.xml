<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSearchProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/home_product_surface"
            app:cardCornerRadius="@dimen/home_product_image_radius"
            app:cardElevation="@dimen/home_product_card_elevation"
            app:strokeColor="@color/colorBorderLight"
            app:strokeWidth="@dimen/stroke_width_default">

            <ImageView
                android:id="@+id/ivSearchProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerInside" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnSearchFavorite"
            android:layout_width="@dimen/home_product_heart_size"
            android:layout_height="@dimen/home_product_heart_size"
            android:layout_gravity="end|top"
            android:layout_margin="@dimen/home_product_heart_margin"
            app:cardBackgroundColor="@color/home_heart_bg"
            app:cardCornerRadius="@dimen/corner_radius_round"
            app:cardElevation="@dimen/space_2"
            app:strokeWidth="@dimen/space_0">

            <ImageView
                android:id="@+id/ivSearchFavoriteIcon"
                android:layout_width="@dimen/home_product_heart_icon_size"
                android:layout_height="@dimen/home_product_heart_icon_size"
                android:layout_gravity="center"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_home_heart" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <TextView
        android:id="@+id/tvSearchProductTitle"
        style="@style/HomeText.ProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_product_name_margin_top"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2" />

    <TextView
        android:id="@+id/tvSearchProductSubtitle"
        style="@style/HomeText.ProductSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_product_subtitle_margin_top"
        android:ellipsize="end"
        android:maxLines="1"
        android:minLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_product_price_row_height"
        android:layout_marginTop="@dimen/home_product_price_row_margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSearchPriceAmount"
                style="@style/HomeText.ProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvSearchPriceUnit"
                style="@style/HomeText.ProductPriceUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_product_price_unit_margin_start"
                android:text="@string/currency_dt" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnSearchAddCart"
            android:layout_width="@dimen/home_add_cart_button_size"
            android:layout_height="@dimen/home_add_cart_button_size"
            app:cardBackgroundColor="@color/home_text_primary"
            app:cardCornerRadius="@dimen/home_add_cart_button_radius"
            app:cardElevation="@dimen/space_0"
            app:strokeWidth="@dimen/space_0">

            <ImageView
                android:layout_width="@dimen/home_add_cart_icon_size"
                android:layout_height="@dimen/home_add_cart_icon_size"
                android:layout_gravity="center"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_home_add_cart"
                app:tint="@color/colorSurface" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>
