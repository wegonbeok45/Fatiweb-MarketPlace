<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dialog_alert_outer_padding"
    android:paddingEnd="@dimen/dialog_alert_outer_padding"
    android:paddingTop="@dimen/dialog_alert_outer_padding"
    android:paddingBottom="@dimen/dialog_alert_outer_padding">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/details_topbar_bg"
        app:cardCornerRadius="@dimen/dialog_alert_corner_radius"
        app:cardElevation="@dimen/space_0"
        app:strokeColor="@color/colorBorderLight"
        app:strokeWidth="@dimen/space_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dialog_alert_content_padding"
            android:paddingTop="@dimen/dialog_alert_content_padding"
            android:paddingEnd="@dimen/dialog_alert_content_padding"
            android:paddingBottom="@dimen/dialog_alert_content_padding">

            <TextView
                android:id="@+id/tvAlertDialogTitle"
                style="@style/HomeText.SectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alert_dialog_title" />

            <TextView
                android:id="@+id/tvAlertDialogMessage"
                style="@style/HomeText.ProductSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_alert_message_top_margin"
                android:text="@string/alert_dialog_message"
                android:textColor="@color/details_text_muted" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_alert_actions_top_margin"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAlertCancel"
                    style="@style/AppButton.Secondary"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dialog_alert_button_height"
                    android:layout_weight="1"
                    android:text="@string/alert_dialog_cancel" />

                <Space
                    android:layout_width="@dimen/dialog_alert_actions_gap"
                    android:layout_height="@dimen/space_0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAlertConfirm"
                    style="@style/AppButton.Primary"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dialog_alert_button_height"
                    android:layout_weight="1"
                    android:text="@string/alert_dialog_confirm" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
