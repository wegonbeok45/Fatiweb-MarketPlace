<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_body_bg"
    tools:context=".AdminDashboardActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/adminAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/profile_header_bg"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/adminTopBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Back button -->
            <ImageView
                android:id="@+id/adminIvBack"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@null"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back"
                app:tint="@color/profile_text_primary" />

            <!-- Title -->
            <TextView
                android:id="@+id/adminTvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/funnelsans_semibold"
                android:text="Tableau de Bord"
                android:textColor="@color/profile_text_primary"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/adminIvAvatar"
                app:layout_constraintStart_toEndOf="@id/adminIvBack"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Shield badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adminShieldBadge"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/profile_edit_bg"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/adminIvAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_admin_shield"
                    app:tint="@color/profile_edit_icon" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Admin avatar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adminIvAvatar"
                android:layout_width="38dp"
                android:layout_height="38dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/profile_avatar_ring"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/adminIvAvatarImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/profile_avatar_art" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Divider under top bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/profile_divider" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/adminScrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp">

            <!-- Welcome banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adminCardWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/profile_edit_bg"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/adminTvWelcomeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/funnelsans_regular"
                        android:text="Bienvenue,"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:alpha="0.85"
                        app:layout_constraintEnd_toStartOf="@id/adminWelcomeShield"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/adminTvWelcomeName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/funnelsans_extrabold"
                        android:text="Administrateur"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@id/adminWelcomeShield"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/adminTvWelcomeLabel" />

                    <TextView
                        android:id="@+id/adminTvWelcomeSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/funnelsans_regular"
                        android:text="FatiWeb Market · Panneau Admin"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:alpha="0.75"
                        app:layout_constraintEnd_toStartOf="@id/adminWelcomeShield"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/adminTvWelcomeName" />

                    <ImageView
                        android:id="@+id/adminWelcomeShield"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@null"
                        android:alpha="0.35"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_admin_shield"
                        app:tint="#FFFFFF" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stats section header -->
            <TextView
                android:id="@+id/adminTvStatsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/funnelsans_semibold"
                android:text="Vue d'ensemble"
                android:textColor="@color/profile_text_primary"
                android:textSize="16sp" />

            <!-- Stats grid: row 1 -->
            <LinearLayout
                android:id="@+id/adminStatsRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Card: Commandes -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminCardCommandes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/profile_card_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/profile_card_icon_bg"
                            app:cardCornerRadius="999dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/shoppingbag"
                                app:tint="@color/colorPrimary" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/adminTvCommandesVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/funnelsans_extrabold"
                            android:text="24"
                            android:textColor="@color/profile_text_primary"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/funnelsans_regular"
                            android:text="Commandes"
                            android:textColor="@color/profile_text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/adminTvCommandesDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_admin_stat_positive"
                            android:fontFamily="@font/funnelsans_semibold"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="▲ +12% vs hier"
                            android:textColor="#1A7C4A"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Chiffre d'affaires -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminCardRevenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="@color/profile_card_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/profile_accent"
                            app:cardCornerRadius="999dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/ic_checkout_wallet"
                                app:tint="@color/colorPrimary" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/adminTvRevenueVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/funnelsans_extrabold"
                            android:text="1,250"
                            android:textColor="@color/profile_text_primary"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/funnelsans_regular"
                            android:text="CA (DT)"
                            android:textColor="@color/profile_text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/adminTvRevenueDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_admin_stat_positive"
                            android:fontFamily="@font/funnelsans_semibold"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="▲ +5% vs hier"
                            android:textColor="#1A7C4A"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Stats grid: row 2 -->
            <LinearLayout
                android:id="@+id/adminStatsRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Card: Nouveaux clients -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminCardClients"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/profile_card_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="#E8F4FD"
                            app:cardCornerRadius="999dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/user"
                                app:tint="#3B82F6" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/adminTvClientsVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/funnelsans_extrabold"
                            android:text="12"
                            android:textColor="@color/profile_text_primary"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/funnelsans_regular"
                            android:text="Nv. clients"
                            android:textColor="@color/profile_text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/adminTvClientsDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_admin_stat_neutral"
                            android:fontFamily="@font/funnelsans_semibold"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="● Stable"
                            android:textColor="#5D6575"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Stock faible -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminCardStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="@color/profile_card_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="#FEF2F2"
                            app:cardCornerRadius="999dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/ic_home_filter"
                                app:tint="#EF4444" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/adminTvStockVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/funnelsans_extrabold"
                            android:text="5"
                            android:textColor="@color/profile_text_primary"
                            android:textSize="26sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/funnelsans_regular"
                            android:text="Stock faible"
                            android:textColor="@color/profile_text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/adminTvStockDelta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_admin_stat_alert"
                            android:fontFamily="@font/funnelsans_semibold"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="⚠ Action requise"
                            android:textColor="#B91C1C"
                            android:textSize="11sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Actions Rapides header -->
            <TextView
                android:id="@+id/adminTvActionsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/funnelsans_semibold"
                android:text="Actions Rapides"
                android:textColor="@color/profile_text_primary"
                android:textSize="16sp" />

            <!-- Quick action buttons row -->
            <LinearLayout
                android:id="@+id/adminActionsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Add product -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminBtnAddProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/profile_card_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="@color/profile_card_icon_bg"
                            app:cardCornerRadius="999dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/ic_home_add_cart"
                                app:tint="@color/colorPrimary" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/funnelsans_semibold"
                            android:gravity="center"
                            android:text="Ajouter\nProduit"
                            android:textColor="@color/profile_text_primary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- View orders -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminBtnViewOrders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/profile_card_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="@color/profile_accent"
                            app:cardCornerRadius="999dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/shoppingbag"
                                app:tint="@color/colorPrimary" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/funnelsans_semibold"
                            android:gravity="center"
                            android:text="Voir\nCommandes"
                            android:textColor="@color/profile_text_primary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Settings -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminBtnSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/profile_card_bg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/colorBorderLight"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="#F4F0EC"
                            app:cardCornerRadius="999dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/settings"
                                app:tint="@color/profile_text_secondary" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/funnelsans_semibold"
                            android:gravity="center"
                            android:text="Paramètres"
                            android:textColor="@color/profile_text_primary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Dernières commandes header -->
            <TextView
                android:id="@+id/adminTvOrdersHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/funnelsans_semibold"
                android:text="Dernières Commandes"
                android:textColor="@color/profile_text_primary"
                android:textSize="16sp" />

