<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/home_nav_bg"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/ivIconContainer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_notification_icon_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivNotificationIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/notification"
                app:tint="@color/colorPrimary" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvNotificationTitle"
            style="@style/HomeText.CategoryLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="Welcome to FatiWeb!"
            android:textColor="@color/home_text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivIconContainer"
            app:layout_constraintTop_toTopOf="@id/ivIconContainer" />

        <TextView
            android:id="@+id/tvNotificationMessage"
            style="@style/HomeText.SearchHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Discover the best of Tunisian artisanat..."
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvNotificationTitle"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationTitle" />

        <TextView
            android:id="@+id/tvNotificationTime"
            style="@style/HomeText.SearchHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Just now"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/tvNotificationTitle"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationMessage" />

        <View
            android:id="@+id/viewUnreadDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_notification_badge"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
